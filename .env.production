# === CONFIGURAÇÃO DE PRODUÇÃO ===
# Copie este arquivo para .env na VPS e preencha os valores

# Django
DEBUG=0
SECRET_KEY=CHANGE_ME_TO_A_SECURE_KEY_MINIMUM_50_CHARS
ALLOWED_HOSTS=seu-dominio.com.br,www.seu-dominio.com.br,seu-ip

# Database (PostgreSQL na VPS)
DATABASE_URL=postgres://webreceptivo:SENHA_FORTE_AQUI@localhost:5432/webreceptivo_prod

# Email (Sendgrid ou outra provider)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=seu-email@gmail.com
EMAIL_HOST_PASSWORD=sua-senha-ou-app-password

# Security
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# Cache
CACHE_URL=redis://localhost:6379/1

# Media e Static
MEDIA_URL=/media/
STATIC_URL=/static/

# Performance
CONN_MAX_AGE=600
